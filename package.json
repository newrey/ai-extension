{
  "name": "drawio-ai-extension",
  "version": "1.0.0",
  "description": "Draw.io AI Extension with MCP Server",
  "type": "module",
  "main": "src/main/electron.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "nodemon --watch src/main --exec \"node --inspect=5858 src/main/electron.js\"",
    "dev:renderer": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "package": "electron-builder --win --x64",
    "test": "jest"
  },
  "keywords": [
    "drawio",
    "mcp",
    "electron",
    "ai"
  ],
  "author": "newrey",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^2.0.0",
    "express": "^4.18.2",
    "zod": "^3.22.4",
    "electron": "^31.0.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "babel-jest": "^29.7.0",
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.drawio.ai.extension",
    "productName": "Draw.io AI Extension",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "src/**/*",
      "ext/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    }
  }
}
