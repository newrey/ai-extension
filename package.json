{
  "name": "drawio-ai-client",
  "version": "1.0.0",
  "description": "基于Electron构建的现代化Draw.io客户端，支持AI对话",
  "main": "src/main/electron.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "drawio",
    "electron",
    "ai",
    "diagram",
    "mcp"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "electron-store": "^10.0.0"
  },
  "build": {
    "appId": "com.example.drawio-ai-client",
    "productName": "Draw.io AI Client",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "ext/drawio/src/main/webapp/**/*"
    ]
  }
}
